<div>
    <h2> Public Recipe </h2>

    <% @public_recipes.each do |recipe| %>
        <div>
            <div>
                <h3><%= link_to recipe.name, recipe_path(recipe.id) %></h3>
                <p>By: <%= recipe.user.name %> </p>
            </div>
            <div>
                <p>Preparation time: <%= recipe.preparation_time%></p>
                <p>Cooking time: <%= recipe.cooking_time %></p>
            </div>
        </div>
    <% end %>
</div>